<% layout("/layouts/boilerplate") %>

<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="mb-3 text-center"><%= listing.title %></h1>

      <div class="card shadow-sm listing-card">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top rounded show-img"
          alt="listing-image"
        />
        <div class="card-body">
          <p class="card-text">
            Owned by : <i><%= listing.owner.username %></i>
          </p>
          <p class="card-text"><%= listing.description %></p>
          <p class="card-text mb-1">
            <strong>Price:</strong> ₹<%= listing.price.toLocaleString("en-IN")
            %> / night
          </p>
          <p class="card-text mb-1">
            <strong>Location:</strong> <%= listing.location %>
          </p>
          <p class="card-text mb-1">
            <strong>Country:</strong> <%= listing.country %>
          </p>

          <div class="d-flex justify-content-between mt-4">
            <a href="/listings/<%= listing.id %>/edit" class="btn btn-primary"
              >Edit</a
            >
            <form
              action="/listings/<%= listing.id %>?_method=DELETE"
              method="post"
              onsubmit="return confirm('Are you sure you want to delete this listing?')"
            >
              <button class="btn btn-danger">Delete</button>
            </form>
          </div>
        </div>
      </div>

      <hr class="my-4" />

      <% if(currUser){ %>
      <div class="review-section">
        <h4 class="mb-3">Leave a Review</h4>
        <form
          action="/listings/<%= listing.id %>/reviews"
          method="POST"
          class="needs-validation"
          novalidate
        >
          <div class="mb-3">
            <label for="rating" class="form-label">Rating: </label>
            <fieldset class="starability-slot">
              <input
                type="radio"
                id="no-rate"
                class="input-no-rate"
                name="review[rating]"
                value="1"
                checked
                aria-label="No rating."
              />
              <input
                type="radio"
                id="first-rate1"
                name="review[rating]"
                value="1"
              />
              <label for="first-rate1" title="Terrible">1 star</label>
              <input
                type="radio"
                id="first-rate2"
                name="review[rating]"
                value="2"
              />
              <label for="first-rate2" title="Not good">2 stars</label>
              <input
                type="radio"
                id="first-rate3"
                name="review[rating]"
                value="3"
              />
              <label for="first-rate3" title="Average">3 stars</label>
              <input
                type="radio"
                id="first-rate4"
                name="review[rating]"
                value="4"
              />
              <label for="first-rate4" title="Very good">4 stars</label>
              <input
                type="radio"
                id="first-rate5"
                name="review[rating]"
                value="5"
              />
              <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
          </div>
          <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea
              name="review[comment]"
              id="comment"
              rows="4"
              class="form-control"
              placeholder="Write your experience..."
              required
            ></textarea>
            <div class="invalid-feedback">
              Please add some comments for review
            </div>
          </div>
          <button class="btn btn-outline-dark">Submit Review</button>
        </form>
      </div>
      <hr class="my-4" />
      <% } %>

      <div class="review-shows">
        <h4 class="mb-4">All Reviews</h4>

        <% if(listing.reviews.length === 0){ %>
        <p class="text-muted">No reviews yet. Be the first reviewer!</p>
        <% } else { %>
        <div class="row g-4">
          <% for(let review of listing.reviews){ %>
          <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100">
              <div class="card-body">
                <!-- author -->
                <h5 class="card-text mb-3">@<%= review.author.username %></h5>

                <!-- Stars -->
                <div class="mb-3 review-stars">
                  <% for(let i = 1; i <= review.rating; i++) { %>
                  <span class="text-warning">★</span>
                  <% } %> <% for(let i = review.rating + 1; i <= 5; i++) { %>
                  <span class="text-muted">★</span>
                  <% } %>
                </div>

                <!-- Comment -->
                <p class="card-text mb-3"><%= review.comment %></p>
              </div>
              <form
                class="mb-3"
                action="/listings/<%= listing.id %>/reviews/<%= review.id %>?_method=DELETE"
                method="POST"
              >
                <button class="btn btn-sm btn-dark">Delete</button>
              </form>
            </div>
          </div>
          <% } %>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
